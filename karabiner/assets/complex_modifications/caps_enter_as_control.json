{
  "title": "CTRL",
  "rules": [
    {
      "description": "CTRL for CapsLock or Enter. ESC if CapsLock pressed alone",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "return_or_enter",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_control",
              "lazy": true
            }
          ],
          "to_if_alone": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "parameters": {
            "basic.to_if_alone_timeout_milliseconds": 150
          },
          "type": "basic"
        }
      ]
    }
  ]
}
