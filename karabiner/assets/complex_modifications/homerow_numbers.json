{
  "title": "Spacebar + homerow ==> numbers",
  "rules": [
    {
      "description": "Change spacebar + homerow = numbers",
      "manipulators": [
        {
          "description": "Spacebar + A = 1",
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "1" }]
        },
        {
          "description": "Spacebar + S = 2",
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "2" }]
        },
        {
          "description": "Spacebar + D = 3",
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "3" }]
        },
        {
          "description": "Spacebar + F = 4",
          "type": "basic",
          "from": {
            "key_code": "f",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "4" }]
        },
        {
          "description": "Spacebar + G = 5",
          "type": "basic",
          "from": {
            "key_code": "g",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "5" }]
        },
        {
          "description": "Spacebar + H = 6",
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "6" }]
        },
        {
          "description": "Spacebar + J = 7",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "7" }]
        },
        {
          "description": "Spacebar + K = 8",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "8" }]
        },
        {
          "description": "Spacebar + L = 9",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "9" }]
        },
        {
          "description": "Spacebar + semicolon = 0",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": { "mandatory": ["fn"] }
          },
          "to": [{ "key_code": "0" }]
        },
        {
          "description": "Spacebar override",
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": { "optional": ["any"] }
          },
          "to_if_held_down": [{ "key_code": "fn" }],
          "to_if_alone": [{ "key_code": "spacebar" }]
        }
      ]
    }
  ]
}
